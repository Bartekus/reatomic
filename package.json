{
  "name": "reatomic",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:clean": "shx rm -rf dist",
    "build:copy": "shx cp public/**/* dist",
    "prebuild": "npm run build:clean && npm run build:copy",
    "build": "npm run env:prod -- webpack",
    "dev": "npm run env:dev -- webpack-dev-server",
    "start": "npm run dev",
    "lint": "eslint src config webpack.config.js",
    "test": "jest --env=jsdom --colors --coverage test",
    "env:dev": "cross-env NODE_ENV=development",
    "env:prod": "cross-env NODE_ENV=production",
    "coverage": "npm test -- --coverage",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "storybook": "start-storybook -p 9001 -c config/storybook"
  },
  "dependencies": {
    "babel-polyfill": "^6.20.0",
    "connected-react-router": "^4.4.1",
    "history": "^4.6.1",
    "lodash": "^4.17.4",
    "normalizr": "3.2.4",
    "prop-types": "^15.5.8",
    "query-string": "^6.1.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-hot-loader": "^4.1.2",
    "react-loadable": "^5.3.1",
    "react-modal": "^3.1.11",
    "react-redux": "^5.0.1",
    "react-router-dom": "^4.1.1",
    "redux": "^4.0.0",
    "redux-form": "^7.0.0",
    "redux-saga": "^0.16.0",
    "redux-saga-thunk": "^0.7.1",
    "simple-load-script": "^1.0.2",
    "styled-components": "^3.0.2",
    "styled-theme": "^0.3.0",
    "styled-tools": "^1.1.0",
    "validator": "^10.5.0",
    "whatwg-fetch": "^2.0.2"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^4.0.0-alpha.16",
    "@storybook/addons": "^4.0.0-alpha.16",
    "@storybook/react": "^4.0.0-alpha.16",
    "babel-core": "^6.24.1",
    "babel-eslint": "^9.0.0-beta.3",
    "babel-jest": "^23.4.2",
    "babel-loader": "^7.1.4",
    "babel-plugin-styled-components": "^1.1.4",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.0",
    "babel-preset-env": "^1.3.3",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "cross-env": "^5.0.0",
    "delay": "^3.0.0",
    "enzyme": "^3.4.1",
    "enzyme-adapter-react-16": "^1.2.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.0.1",
    "file-loader": "^1.1.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.0.0-rc.13",
    "jest-cli": "^23.5.0",
    "jsdom": "^11.11.0",
    "lint-staged": "^7.2.2",
    "opn-cli": "^3.1.0",
    "raw-loader": "^0.5.1",
    "react-test-renderer": "^16.0.0",
    "redux-mock-store": "^1.2.3",
    "redux-saga-test-plan": "^3.7.0",
    "shelljs": "^0.8.2",
    "url-loader": "^1.0.1",
    "webpack": "^4.6.0",
    "webpack-blocks": "^1.0.0",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again",
      "pre-push": "npm run lint && npm run test"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "testURL": "http://localhost/",
    "moduleDirectories": [
      "src",
      "node_modules"
    ],
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/jest/fileMock.js",
      "^(components|containers)$": "<rootDir>/config/jest/componentsMock.js",
      "^(store|\\.\\.)\\/selectors$": "<rootDir>/config/jest/selectorsMock.js",
      "^(store|\\.\\.)\\/actions$": "<rootDir>/config/jest/actionsMock.js"
    },
    "setupFiles": [
      "<rootDir>/config/jest/setupTests.js"
    ]
  }
}
